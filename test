yum install -y -q wget which &&\
    wget ${xcat_reporoot}/${xcat_version}/$([[ "devel" = "${xcat_version}" ]] && echo 'core-snap' || echo 'xcat-core')/xcat-core.repo -O /etc/yum.repos.d/xcat-core.repo && \
    wget ${xcat_reporoot}/${xcat_version}/xcat-dep/${xcat_baseos}/$(uname -m)/xcat-dep.repo -O /etc/yum.repos.d/xcat-dep.repo && \
    yum install -y \
       xCAT \
       openssh-server \
       rsyslog \
       createrepo \
       chrony \
       man && \
    yum clean all


ARG xcat_version=latest
ARG xcat_reporoot=https://xcat.org/files/xcat/repos/yum
ARG xcat_baseos=rh7



++++++++++++++

 wget https://xcat.org/files/xcat/repos/yum/latest/$([[ "devel" = "latest" ]] && echo 'core-snap' || echo 'xcat-core')/xcat-core.repo -O /etc/yum.repos.d/xcat-core.repo 

wget https://xcat.org/files/xcat/repos/yum/latest/xcat-dep/rh7/$(uname -m)/xcat-dep.repo -O /etc/yum.repos.d/xcat-dep.repo
